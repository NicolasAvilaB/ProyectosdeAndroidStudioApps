<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:id="@+id/refresco_datos"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="underhome.weather.com.underhome.DHT11"
    tools:showIn="@layout/app_bar_dht11">

    <ScrollView
        android:id="@+id/scroolees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tarjeta778855"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:fadingEdge="vertical"
            android:orientation="vertical"
            android:translationZ="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0D706E"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/jh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Operario:"
                android:textAlignment="textStart"
                android:textColor="#33B08A"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/operario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#33B08A"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/temp"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Clima Actual"
                android:textAlignment="center"
                android:textColor="#33B08A"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical" >

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/temp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Planes de Riego"
                android:textAlignment="center"
                android:textColor="#5EADEB"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fitsSystemWindows="false"
                android:scrollbars="vertical"
                android:soundEffectsEnabled="false">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/temp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Suelo"
                android:textAlignment="center"
                android:textColor="#73ACB0"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler3"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/temp88"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Lectura de Temperatura y Humedad"
                android:textAlignment="center"
                android:textColor="#73ACB0"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tarjeta4555"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:fadingEdge="vertical"
                android:orientation="vertical"
                android:translationZ="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0D706E"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="14dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/TEMPAMB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/HUMAMB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/TEMPAGUA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/ESTADOA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/ESTADOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/ESTADOC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>
