<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.rest.software.examenrestaurante.modificarpedido"
    android:weightSum="1">

    <TextView
        android:id="@+id/textetxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-23dp"
        android:text="........"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Ingrese Nombre Usuario..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/elemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Busque Platillo..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-23dp"
        android:text="........"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Ingrese Cantidad..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="-23dp"
        android:text="........"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesa:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-23dp"
        android:text="........"
        android:textSize="18sp" />

    <Button
        android:id="@+id/eleccion"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="199dp"
        android:enabled="false"
        android:text="Bebestibles"
        android:visibility="visible" />

    <ListView
        android:id="@+id/listar"
        android:layout_width="match_parent"
        android:layout_height="117dp" />

    <EditText
        android:id="@+id/buscar"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Busquedas ID, P, U..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/actua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="-42dp"
        android:text="Actualizar" />

    <Button
        android:id="@+id/modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="219dp"
        android:layout_marginTop="-400dp"
        android:text="Modificar" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="219dp"
        android:enabled="false"
        android:text="Guardar" />

    <Button
        android:id="@+id/regresar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="219dp"
        android:text="Volver" />
</LinearLayout>
