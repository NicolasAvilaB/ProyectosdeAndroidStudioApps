<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fitsSystemWindows="true"
                            android:orientation="vertical"
                            app:carbon_insetColor="?attr/colorPrimary">

    <include layout="@layout/view_debugtoolbar"/>

    <carbon.widget.FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/carbon_margin">

        <carbon.widget.ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/mazda"
            app:carbon_heightPercent="25.0%"
            app:carbon_widthPercent="50.0%"/>

        <carbon.widget.EditText
            android:layout_gravity="end|bottom"
            android:text="EditText 50%"
            app:carbon_heightPercent="50.0%"
            app:carbon_widthPercent="50.0%"/>
    </carbon.widget.FrameLayout>
</carbon.widget.LinearLayout>