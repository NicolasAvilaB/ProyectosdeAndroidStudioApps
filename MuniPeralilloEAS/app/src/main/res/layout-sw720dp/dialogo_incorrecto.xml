<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarjeta_riego"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:fadingEdge="vertical"
    android:orientation="vertical"
    android:translationZ="@dimen/translationz"
    card_view:cardCornerRadius="@dimen/cardCornerRadius"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="@dimen/elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Color_Medio_BlancoAzul"
        android:orientation="vertical"
        android:paddingBottom="@dimen/paddingBottom"
        android:paddingStart="@dimen/paddingStart"
        android:paddingEnd="@dimen/paddingEnd"
        android:paddingTop="@dimen/paddingTop" />

    <TextView
        android:id="@+id/contenido_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_marginStart"
        android:layout_marginEnd="@dimen/layout_marginEnd"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:gravity="center"
        android:paddingStart="@dimen/paddingStart2"
        android:paddingEnd="@dimen/paddingEnd2"
        android:text="@string/nombreperfil"
        android:textColor="#7F7F7F"
        android:textSize="@dimen/tamano_letra7s" />

    <Button
        android:id="@+id/aceptaraccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_marginBottom7s"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_marginTop7s"
        android:background="@drawable/boton_aceptar"
        android:textColor="@android:color/white" />

</androidx.cardview.widget.CardView>