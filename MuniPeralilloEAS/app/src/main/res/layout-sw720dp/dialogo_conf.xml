<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarjeta_riego"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:fadingEdge="vertical"
    android:orientation="vertical"
    android:translationZ="5dp"
    card_view:cardCornerRadius="9dp"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Color_Medio_BlancoAzul"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingStart="12dp"
        android:paddingEnd="14dp"
        android:paddingTop="14dp"/>

    <TextView
        android:id="@+id/contenido_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_marginStart"
        android:layout_marginEnd="@dimen/layout_marginEnd"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:gravity="center"
        android:paddingStart="@dimen/paddingStart2"
        android:paddingEnd="@dimen/paddingEnd2"
        android:text="@string/nombreperfil"
        android:textColor="#7F7F7F"
        android:textSize="@dimen/tamano_letra7s" />

    <Button
        android:id="@+id/aceptaraccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_marginTop7s"
        android:layout_marginBottom="108dp"
        android:background="@drawable/boton_aceptar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/cancelaraccion"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamano_boton7"
        android:text="@string/cancelar"
        android:textColor="#19705C"
        android:layout_marginEnd="@dimen/margen_derechobl7"
        android:layout_marginStart="@dimen/margen_izquierdobl7"
        android:textSize="@dimen/tamano_letra_bl7"
        android:layout_marginBottom="@dimen/espacio_abajo_bl7"
        android:layout_gravity="bottom" />

</androidx.cardview.widget.CardView>


