<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarjeta_riego"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:fadingEdge="vertical"
    android:orientation="vertical"
    android:translationZ="5dp"
    card_view:cardCornerRadius="9dp"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Color_Medio_BlancoAzul"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingStart="12dp"
        android:paddingEnd="14dp"
        android:paddingTop="14dp" />

    <TextView
        android:id="@+id/contenido_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:text="@string/nombreperfil"
        android:textColor="#7F7F7F"
        android:textSize="18sp" />

    <Button
        android:id="@+id/aceptaraccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="73sp"
        android:background="@drawable/boton_aceptar"
        android:textColor="@android:color/white" />

</androidx.cardview.widget.CardView>