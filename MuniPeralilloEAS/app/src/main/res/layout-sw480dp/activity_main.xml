<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blancopuro"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamano_fondo4"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:id="@+id/texto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/texto_bienvenido_espladoizquierdo4"
        android:layout_marginTop="@dimen/texto_bienvenido_espladoarriba4"
        android:elevation="@dimen/texto_bienvenido_elevacion4"
        android:text="@string/bienv"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tamaño_texto_bienvenido4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/texto_comuna_espladoizquierdo4"
        android:layout_marginTop="@dimen/texto_comuna_espladoarriba4"
        android:elevation="@dimen/texto_comuna_elevacion4"
        android:text="@string/bienv2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tamaño_texto_comuna4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boton_iniciosesion_espacioarriba4"
        android:background="@drawable/boton_iniciar"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/texto_registrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registro"
            android:textColor="#323232"
            android:textSize="@dimen/mensaje_registro4" />

        <Button
            android:id="@+id/registrarse"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espacio_lado_izquierdo_registro4"
            android:background="?attr/selectableItemBackground"
            android:clickable="false"
            android:text="@string/registro2"
            android:textAlignment="center"
            android:textColor="#dd2c00"
            android:textSize="@dimen/mensaje_registro4" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>