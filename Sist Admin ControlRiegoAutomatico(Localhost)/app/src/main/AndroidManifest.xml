<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="underhome.weather.com.underhome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="administracion.admin.com.riego.Inicio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="administracion.admin.com.riego.DHT11"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:label="@string/title_activity_dht11"
            android:supportsPictureInPicture="true"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="administracion.admin.com.riego.Login"
            android:supportsPictureInPicture="true"
            android:windowSoftInputMode="stateVisible"
            />
        <activity android:name="administracion.admin.com.riego.Planes_Riego"
            android:supportsPictureInPicture="true"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name="administracion.admin.com.riego.Suelo"
            android:supportsPictureInPicture="true"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name="administracion.admin.com.riego.Usuarios"
            android:supportsPictureInPicture="true"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name="administracion.admin.com.riego.Cultivos_Notificaciones"
            android:supportsPictureInPicture="true"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name="administracion.admin.com.riego.Invernaderos"
            android:supportsPictureInPicture="true"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name="administracion.admin.com.riego.H_Riego"
            android:supportsPictureInPicture="true"
            />
        <activity android:name="administracion.admin.com.riego.H_Suelo"
            android:supportsPictureInPicture="true"
            />
        <activity android:name="administracion.admin.com.riego.H_Clima"
            android:supportsPictureInPicture="true"
            />
        <activity android:name="administracion.admin.com.riego.H_Sesion"
            android:supportsPictureInPicture="true"
            >
        </activity>
    </application>

</manifest>