<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tarjeta_riego"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:fadingEdge="vertical"
    android:orientation="vertical"
    android:translationZ="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="12dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Hora de Aviso"
        android:textAlignment="center"
        android:textColor="#888888"
        android:textSize="20sp" />

    <Button
        android:id="@+id/resta"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="48dp"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#19705C"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/contenido_suma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="58dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Hora 00"
        android:textAlignment="center"
        android:textColor="#888888"
        android:textSize="28sp" />

    <Button
        android:id="@+id/suma"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="48dp"
        android:text="+"
        android:textAlignment="textStart"
        android:textColor="#19705C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/resta2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="108dp"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#19705C"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/contenido_suma2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="118dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Minuto 00"
        android:textAlignment="center"
        android:textColor="#888888"
        android:textSize="28sp" />

    <Button
        android:id="@+id/suma2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="108dp"
        android:text="+"
        android:textAlignment="textStart"
        android:textColor="#19705C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/aceptaraccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/boton_redondeado"
        android:text="Aceptar"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/cancelaraccion"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="245dp"
        android:text="Cancelar"
        android:textColor="#19705C" />


    </android.support.v7.widget.CardView>


